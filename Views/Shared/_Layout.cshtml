<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/style.css" rel='stylesheet' type='text/css' />
    <!-- jQuery (Bootstrap's JavaScript plugins) -->
    <script src="~/Content/js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Roboto:500,900,100,300,700,400' rel='stylesheet' type='text/css'>
    <!--webfont-->
    <!-- dropdown -->
    <script src="~/Content/js/jquery.easydropdown.js"></script>
    <link href="~/Content/css/nav.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/Content/js/scripts.js" type="text/javascript"></script>
    <!--js-->
</head>
<body>
    <!--banner-->
    <script src="~/Content/js/responsiveslides.min.js"></script>
    <script>

    $(function () {
      $("#slider").responsiveSlides({
      	auto: false,
      	nav: true,
      	speed: 500,
        namespace: "callbacks",
        pager: true,
      });
    });
    </script>
    <div class="banner-bg banner-sec">
        <div class="container">
            <div class="header">
                <div class="logo">
                    <a href="@Url.Action("Index")"><img src="~/Content/images/logo.png" alt="" /></a>
                </div>
                <div class="top-nav">
                    <label class="mobile_menu" for="mobile_menu">
                        <span>Menu</span>
                    </label>
                    <input id="mobile_menu" type="checkbox">
                    <ul class="nav">
                        <li class="dropdown1">
                            <a href="@Url.Action("Index")">HOME</a>
                        </li>
                        <li class="dropdown1">
                            <a href="@Url.Action("recherche")">SEARCH</a>
                        </li>
                        <li class="dropdown1">
                            <a href="@Url.Action("AllShows")">All Shows</a>
                        </li>
                        <a class="shop" href="@Url.Action("cart")"><img src="~/Content/images/cart.png" alt="" /></a>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--/banner-->
    <div class="bikes">

        @RenderBody()
    </div>
    <!---->
    <div class="footer">
        <div class="container wrap">
            <div class="logo2">
                <a href="@Url.Action("Index")"><img src="~/Content/images/logo2.png" alt="" /></a>
            </div>
            <div class="ftr-menu">
                <ul>
                    <li><a href="@Url.Action("Index")">HOME</a></li>
                    <li><a href="@Url.Action("cart")">Mon Panier</a></li>
                    <li><a href="@Url.Action("AllShows")">All Shows</a></li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!---->
</body>
</html>
